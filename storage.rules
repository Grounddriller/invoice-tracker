rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access their own invoice files
    match /invoices/{userId}/{allPaths=**} {
      // Allow read if user is authenticated and matches the userId in path
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow write (upload/delete) if user is authenticated and matches the userId in path
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

